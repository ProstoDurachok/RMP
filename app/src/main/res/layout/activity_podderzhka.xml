<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Podderzhka"
    android:background="#141313">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="30dp"
            android:fontFamily="@font/karmabold"
            android:gravity="center"
            android:text="Поддержка"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/podderzhka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:fontFamily="@font/karmaregular"
            android:text="Опишите свою проблему"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/border_text_view"
            android:fontFamily="@font/karmaregular"
            android:gravity="left"
            android:hint="Пишите здесь"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="#A79E9E"
            android:textSize="16sp" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="30dp"
        android:text="Отправить"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/karmamedium"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>