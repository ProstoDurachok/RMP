<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#141313">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добро пожаловать\n в Do to live!"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/karmabold"/>

        <ImageView
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/maan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбор учетной записи"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/karmaregular"
            android:layout_marginTop="10dp"/>

        <!--<androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/rec1"
            android:drawableEnd="@drawable/arrow_1"
            android:paddingHorizontal="10dp"
            android:text="Силюков Илья Алексеевич"
            android:background="#646664"
            android:fontFamily="@font/karmasbold"
            android:textColor="@color/white"
            android:layout_marginVertical="2dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/rec1"
            android:drawableEnd="@drawable/arrow_1"
            android:paddingHorizontal="10dp"
            android:text="Силюков Илья Алексеевич"
            android:background="#646664"
            android:fontFamily="@font/karmasbold"
            android:textColor="@color/white"
            android:layout_marginVertical="2dp"/>-->
        <!--<include
            android:id="@+id/customButton"
            layout="@layout/custom_button"/>-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#323332"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginVertical="2dp"
                android:id="@+id/customButton">

                <ImageView
                    android:id="@+id/left_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/rec1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <TextView
                        android:id="@+id/top_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Силюков Илья Алексеевич"
                        android:textSize="16sp"
                        android:fontFamily="@font/karmasbold"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/bottom_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SilukovIA@gmail.com"
                        android:fontFamily="@font/karmamedium"
                        android:textColor="@color/white" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/right_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_1" />
            </LinearLayout>
        </FrameLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="15dp"
            android:text="Использовать другую учетную запись"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/karmamedium"
            android:background="@drawable/button"/>


    </LinearLayout>
    <TextView
        android:id="@+id/newacc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="У вас нет учетной записи?"
        android:textColor="#3F3BFA"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/karmasbold"
        android:textSize="18sp"/>

</RelativeLayout>